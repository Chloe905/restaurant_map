<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner row align-items-center text-center justify-content-between">
      <form action="/search" class="col-4" id="search-form">
        <div class="input-group ">
          <input type="text" name="keyword" class="form-control " placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="dropdown col-4 ">
        <div class="input-group">
          <select name="sort" id="sort" class="text-center form-select" form="search-form">
            <option value="defalut" disabled selected>Sort by</option>
            <option value="AtoZ">A > Z</option>
            <option value="ZtoA">Z > A</option>
            <option value="category">Category</option>
            <option value="location">Location</option>
          </select>
        </div>
      </div>
    </div>
  </div>
</div>

<div class=" text-center mt-3">
  <a href="/restaurants/new" type="button" class="btn btn-secondary btn-sm rounded-pill">
    <iclass="fas fa-plus-circle"></i> add
      restaurant
  </a>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurants}}
        <div class="col">
          <div class="card mt-3">
            <div class="card-body">
              <a href="/restaurants/{{this._id}}"><img class="card-img-top" src="{{this.image}}"
                  alt="{{this.name}}"></a>
              <div class="card-body p-1">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge rounded-pill bg-danger ">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>

            <div class="card-footer d-flex justify-content-end ">
              <a href="/restaurants/{{this._id}}/edit"
                class="me-3 btn btn-outline-secondary btn-sm delete-btn border-white rounded-circle"><i
                  class="far fa-edit"></i></a>
              <a href="/restaurants/{{this._id}}"
                class=" me-3 btn btn-outline-secondary btn-sm delete-btn border-white rounded-circle"><i
                  class="fas fa-info-circle "></i></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class=" btn btn-outline-secondary btn-sm delete-btn border-white rounded-circle"
                  onclick="return confirm(`確定要刪除 {{this.name}} 嗎?`)"><i class=" fas fa-trash-alt"></i></button>
              </form>

            </div>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>


{{!-- button --}}
<div class="text-end">

</div>
</div>